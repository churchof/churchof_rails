            </div>
          </div>
        </div>
      </div>
    </div>
    <% if can? :update, @need %>
      <%= link_to 'Edit Need', edit_need_path(@need), :class => "full-width-btn" %>
    <% else %>
      <%= form_tag needs_create_charge_path do %>
        <%= hidden_field_tag(:user_id, current_user.id) %>
