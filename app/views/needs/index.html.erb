<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="container">
  <div id="map" style='width: 800px; height: 400px;'>
    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    </script>
  </div>
</div>

<div class="page-header">
  <h1>All Needs</h1>
</div>

<% @needs.each do |need| %>
  <div class="container">
    <div class="need">
      <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <%= image_tag need.user_posted_by.gravatar_url %>
        </div>
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
          <p><strong><%= need.user_posted_by.full_name %></strong></p>
          <p><strong><%= need.title %></strong></p>
          <p><%= need.description %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(need.created_at) + " ago", need %>
            <span class="admin">
              | <%= link_to "Edit", edit_need_path(need) %>
              | <%= link_to "Delete", need, method: :delete, data: { confirm: "Are you sure you want to delete this need?"} %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>