<div class="page-header">
  <h1>All Needs</h1>
</div>



<% @needs.each do |need| %>
  <div class="container">
    <div class="need">
      <div class="row">
        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <%= image_tag need.user.gravatar_url %>
        </div>
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
          <p><strong><%= need.user.full_name %></strong></p>
          <p><strong><%= need.title %></strong></p>
          <p><%= need.description %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(need.created_at) + " ago", need %>
            <span class="admin">
              | <%= link_to "Edit", edit_need_path(need) %>
              | <%= link_to "Delete", need, method: :delete, data: { confirm: "Are you sure you want to delete this need?"} %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>