  <div class="need-container">
    <div class="inner-content">
      <h2 class="need-title">
        <%= link_to need.title_public, need %>
      </h2>

      <% if need.date_public_posted %>
        <p class="timestamp-label">
          posted <%= time_ago_in_words(need.date_public_posted) %> ago
        </p>
      <% end %>
      <div class="need-description">
        <p><%= need.description_public %></p>
        <div class="row need-details">

          <% if need.expenses.count > 0 %>
            <div class="expenses col-xs-12 col-sm-6">
              <h3>Expenses</h3>
                <div class="expenses-bar">
                  <span class="progress-bar" style="width:<%= need.percent_raised %>%"></span>
                  <span class="amount-raised"><%= humanized_money_with_symbol need.total_contributed %> / <%= humanized_money_with_symbol need.total_expenses %></span>
                </div>
            </div>
          <% end %>

          <% if need.total_needed_volunteers > 0 %>

          <div class="volunteers col-xs-12 col-sm-6">
            <h3>Volunteers</h3>

            <div class="volunteers-bar">
              <span class="progress-bar" style="width:<%= need.percent_volunteers_secured %>%"></span>
              <span class="amount-raised"><%= need.total_volunteers %> / <%= need.total_needed_volunteers %></span>
            </div>
          </div>
          <% end %>

          <div class="skills col-xs-12 col-sm-6">
            <h3>Skills / Resources</h3>
            <ul class="skills-list">
              <% if need.skills_count > 0 %>
                <% need.skills.each do |skill| %>
                  <li class="skill-tag">
                    <span class="skill-icon">
                      <%= image_tag(skill.icon_url) %>
                    </span>
                    <%= skill.name %>
                  </li>
                <% end %>
              <% else %>
                No skills added yet.
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <% if need.expenses.count > 0 && if need.total_needed_volunteers > 0 %>
<!--     This code needs to be pushed together becasue of spacing issues with inline-block.
 -->      
    <%= link_to 'Read More', need_path(need), :class => "not-full-width-btn", :style => 'width: 34%' %><%= link_to 'Contribute', new_need_contribution_path(need), :class => "not-full-width-btn-green", :style => 'width: 33%'  %><% if user_signed_in? %><% if need.time_contribution_for_user(current_user.id) %><% if need.time_contribution_for_user(current_user.id).cancelled %><%= link_to 'Volunteer', edit_need_time_contribution_path(need, need.time_contribution_for_user_id(current_user.id)), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><%else%><%= link_to 'Cancel Volunteer', edit_need_time_contribution_path(need, need.time_contribution_for_user_id(current_user.id)), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><% end %><% else %><%= link_to 'Volunteer', new_need_time_contribution_path(need), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><% end %><% end %>
    <% end %>
    <% elsif need.expenses.count <= 0 && if need.total_needed_volunteers > 0 %>
    <!--     This code needs to be pushed together becasue of spacing issues with inline-block.
 --> 
      <%= link_to 'Read More', need_path(need), :class => "not-full-width-btn", :style => 'width: 50%' %><% if user_signed_in? %><% if need.time_contribution_for_user(current_user.id) %><% if need.time_contribution_for_user(current_user.id).cancelled %><%= link_to 'Volunteer', edit_need_time_contribution_path(need, need.time_contribution_for_user_id(current_user.id)), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><%else%><%= link_to 'Cancel Volunteer', edit_need_time_contribution_path(need, need.time_contribution_for_user_id(current_user.id)), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><% end %><% else %><%= link_to 'Volunteer', new_need_time_contribution_path(need), :class => "not-full-width-btn-purple", :style => 'width: 33%'  %><% end %><% end %>
    <% end %>
    <% elsif need.expenses.count > 0 && if need.total_needed_volunteers <= 0 %>
      <%= link_to 'Read More', need_path(need), :class => "not-full-width-btn", :style => 'width: 50%' %><%= link_to 'Contribute', new_need_contribution_path(need), :class => "not-full-width-btn-green", :style => 'width: 50%'  %>
    <% end %>
    <% else %>
      <%= link_to 'Read More', need_path(need), :class => "not-full-width-btn", :style => 'width: 100%' %>
    <% end %>


  </div>
