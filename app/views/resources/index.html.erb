<p>
	<b><h2>No Organization</h2></b>
	<% @resources.each do |resource| %>
		<% if resource.organization == nil %>
					<p><b>Title:</b> <%= resource.title %></p>
					<p><b>Description:</b> <%= resource.description %></p>
					<p><b>Website:</b> <%= resource.website %></p>
					<p><b>Contact Phone:</b> <%= resource.contact_phone %></p>
					<p><b>Contact Email:</b> <%= resource.contact_email %></p>
					<p><b>Availability Status:</b> <%= resource.availability_status %></p>
					<p><b>Status:</b> <%= resource.status %></p>
					<p><b>Address:</b> <%= resource.address %></p>
					<% if resource.user %>
					<p><b>Managed By:</b> <%= resource.user.full_name %></p>
					<p><b>Public Status:</b> <%= resource.public_status %></p>
					<p><b>Flagged:</b> <%= resource.flagged %></p>


		      <% if user_signed_in? %>
		      	<% if current_user.has_role? :church_admin %>
			        <% if resource.resource_flag_for_user(current_user.id) %>
			          <% if resource.resource_flag_for_user(current_user.id).flagged %>
			            <%= link_to 'Edit Flag', edit_resource_resource_flag_path(resource, resource.resource_flag_for_user_id(current_user.id)), :class => "need-btn-link full-width-btn-red" %>
			          <%else%>
			            <%= link_to 'Flag', edit_resource_resource_flag_path(resource, resource.resource_flag_for_user_id(current_user.id)), :class => "need-btn-link full-width-btn-red" %>
								<% end %>
			        <% else %>
			          <%= link_to 'Flag', new_resource_resource_flag_path(resource), :class => "need-btn-link full-width-btn-red" %>
			        <% end %>
		        <% end %>
		      <% end %>





					<% end %>
				<br>
		<% end %>
	<% end %>
</p>
<br>

<% @organizations.each do |organization| %>
<p>
<b><h2><%= organization.title %></h2></b>
	<% @resources.each do |resource| %>
		<% if resource.organization %>
			<% if resource.organization == organization %>
				
					<p><b>Title:</b> <%= resource.title %></p>
					<p><b>Description:</b> <%= resource.description %></p>
					<p><b>Website:</b> <%= resource.website %></p>
					<p><b>Contact Phone:</b> <%= resource.contact_phone %></p>
					<p><b>Contact Email:</b> <%= resource.contact_email %></p>
					<p><b>Availability Status:</b> <%= resource.availability_status %></p>
					<p><b>Status:</b> <%= resource.status %></p>
					<p><b>Address:</b> <%= resource.address %></p>
					<% if resource.user %>
					<p><b>Managed By:</b> <%= resource.user.full_name %></p>
					<p><b>Public Status:</b> <%= resource.public_status %></p>
					<p><b>Flagged:</b> <%= resource.flagged %></p>


					<% if user_signed_in? %>
		        <% if resource.resource_flag_for_user(current_user.id) %>
		          <% if resource.resource_flag_for_user(current_user.id).flagged %>
		            <%= link_to 'Edit Flag', edit_resource_resource_flag_path(resource, resource.resource_flag_for_user_id(current_user.id)), :class => "need-btn-link full-width-btn-red" %>
		          <%else%>
		            <%= link_to 'Flag', edit_resource_resource_flag_path(resource, resource.resource_flag_for_user_id(current_user.id)), :class => "need-btn-link full-width-btn-red" %>
							<% end %>
		        <% else %>
		          <%= link_to 'Flag', new_resource_resource_flag_path(resource), :class => "need-btn-link full-width-btn-red" %>
		        <% end %>
		      <% end %>


					<% end %>
				<br>
			<% end %>
		<% end %>
	<% end %>
</p>
<br>

<% end %>
