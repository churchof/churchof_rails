<div class="page-header-block">
  <div class="page-title">
    <h2>Poster Panel</h2>
  </div>

  <ul class="nav nav-pills page-options">
    <li class="active"><a href="#AwaitingApprovalNeeds" data-toggle="tab">
      <% if @needs_admin_incoming.count > 0 %>
        <span class="count-number pull-left"><%= @needs_admin_incoming.count %></span>
      <% end %>
      Awaiting Approval Needs</a>
    </li>
    <li><a href="#InProgressNeeds" data-toggle="tab">
      <% if @needs_admin_in_progress.count > 0 %>
        <span class="count-number pull-left"><%= @needs_admin_in_progress.count %></span>
      <% end %>
      In Progress Needs</a>
    </li>
    <li><a href="#CompletedNeeds" data-toggle="tab">
      <% if @needs_admin_completed.count > 0 %>
        <span class="count-number pull-left"><%= @needs_admin_completed.count %></span>
      <% end %>
      Completed Needs</a>
    </li>

    <li class="pull-right post-new-need">
      <%= link_to "Post a Need", new_need_path, :class => 'important-btn' %>
    </li>
  </ul>
</div>

<div id='content' class="tab-content main-content">
  <div class="tab-pane active" id="AwaitingApprovalNeeds">
    <% @needs_admin_incoming.each do |need| %>
      <div class="need-container">
        <div class="inner-content">
          <h3><%= need.title %></h3>
          <p>Posted By: <strong><%= need.user_posted_by.full_name %></strong></p>
          <div class="need-details">
            <p><%= need.description %></p>
            <div class="meta">
              <%= link_to time_ago_in_words(need.created_at) + " ago", need %>
              <span class="admin">
                  | <%= link_to "Edit", edit_need_path(need) %>
                  | <%= link_to "Delete", need, method: :delete, data: { confirm: "Are you sure you want to delete this need?"} %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="tab-pane" id="InProgressNeeds">
    <% @needs_admin_in_progress.each do |need| %>
      <% if need.need_stage_value == 2 %>
        <div class="need-container">
          <div class="inner-content">
            <h3><%= need.title %></h3>
            <p>Posted By: <strong><%= need.user_posted_by.full_name %></strong></p>
            <div class="need-details">
              <p><%= need.description %></p>
              <div class="meta">
                <%= link_to time_ago_in_words(need.created_at) + " ago", need %>
                <span class="admin">
                    | <%= link_to "Edit", edit_need_path(need) %>
                    | <%= link_to "Delete", need, method: :delete, data: { confirm: "Are you sure you want to delete this need?"} %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="tab-pane" id="CompletedNeeds">
    <% @needs_admin_completed.each do |need| %>
      <% if need.need_stage_value == 3 %>
        <div class="need-container">
          <div class="inner-content">
            <h3><%= need.title %></h3>
            <p>Posted By: <strong><%= need.user_posted_by.full_name %></strong></p>
            <div class="need-details">
              <p><%= need.description %></p>
              <div class="meta">
                <%= link_to time_ago_in_words(need.created_at) + " ago", need %>
                <span class="admin">
                    | <%= link_to "Edit", edit_need_path(need) %>
                    | <%= link_to "Delete", need, method: :delete, data: { confirm: "Are you sure you want to delete this need?"} %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>