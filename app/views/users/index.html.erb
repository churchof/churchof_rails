<div class="page-header">
  <h1>Church Admin Panel</h1>
</div>

<% @users.each do |user| %>
	<p>
		<%= user.full_name %> | 
		<% if user.has_role? :need_poster %>
			<%= "Poster = Y" %>
		<% else %>
			<%= "Poster = N" %>
		<% end %>

		<%= simple_form_for user, method: :put do |f| %>
			<%= f.input :first_name %>
			<%= f.input :roles, :as => :hidden, :input_html => { :value => :need_poster } %>
			<div class="form form-actions">
				<%= submit_tag "Add As Poster", class: 'btn btn-primary' %>
			</div>
		<% end %>

		| 
		<% if user.has_role? :church_admin %>
			<%= "Church Admin = Y" %>
		<% else %>
			<%= "Church Admin = N" %>
		<% end %>
		| 
		<% if user.has_role? :super_admin %>
			<%= "Super Admin = Y" %>
		<% else %>
			<%= "Super Admin = N" %>
		<% end %>
	</p>
<% end %>